{
  "manifest_version": 3,
  "name": "__MSG_extension_name__",
  "version": "1.1",
  "default_locale": "en",
  "description": "__MSG_extension_description__",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["content/YoutubeHideSectionsAddon.js", "content/extension.js"],
      "matches": ["https://www.youtube.com/"]
    }
  ],
  "homepage_url": "https://github.com/MTurnhout/youtube-hide-sections",
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "permissions": ["storage"]
}
